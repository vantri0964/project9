<%= form_tag admin_users_path, method: :get do %>
  <div class="form-group col-md-4">
    <%= label_tag :name %>
     <%= text_field_tag :name, params[:name], class: "form-control"%>
  </div>
  <div class="form-group col-md-4">
     <%= label_tag :email %>
     <%= text_field_tag :email, params[:email], class: "form-control"%>
  </div>
  <div class="form-group col-md-4">
    <%= label_tag :activated %>
    <%= select_tag :activated, options_from_collection_for_select(User.select(:activated).distinct, :activated, :activated, params[:activated]), include_blank: true, class: "form-control" %>
  </div>
  <div class="form-group col-md-3 col-md-offset-3">
    <%= label_tag :max %>
    <%= text_field_tag :max, params[:max] , class: "form-control"%>
  </div>
    <div class="form-group col-md-3">
    <%= label_tag :min %>
    <%= text_field_tag :min, params[:min], class: "form-control" %>
  </div>
  <div class="col-md-2 col-md-offset-3">
    <%= submit_tag "search", class: "btn btn-primary" %>
  </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>User_flowers</th>
      <th>User_floweds</th>
      <th>Point</th>
      <th>activated</th>
      <th>controll</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |f| %>
      <tr>
        <td><%= link_to f.name, f%></td>
        <td><%= f.email %></td>
        <td><%= f.followers.count %></td>
        <td><%= f.following.count %></td>
        <td><%= f.point %></td>
        <td><%= f.activated %></td>
        <td>
          <%=link_to "delete", admin_user_path(f), method: :delete, class: "btn btn-danger" %>
          <%=link_to "edit", edit_admin_user_path(f), class: "btn btn-info" %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<%= will_paginate @user %>
