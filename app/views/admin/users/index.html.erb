<%= form_tag admin_users_path, method: :get do %>
  <div class="form-group">
    <%= label_tag :name %>
     <%= text_field_tag :name%>
  </div>
  <div class="form-group">
     <%= label_tag :email %>
     <%= text_field_tag :email%>
  </div>
  <div class="form-group">
    <%= label_tag :activated %>
    <%= select_tag :activated, options_from_collection_for_select(User.select(:activated).distinct, :activated, :activated, params[:activated]), include_blank: true %>
  </div>
  <%= submit_tag "search", class: "btn btn-primary" %>
<% end %>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>User_flowers</th>
        <th>User_floweds</th>
        <th>Point</th>
        <th>activated</th>
        <th>controll</th>
      </tr>
    </thead>
    <tbody>
    <% @user.each do |f| %>
      <tr>
        <td><%= f.name %></td>
        <td><%= f.email %></td>
        <td><%= f.followers.count %></td>
        <td><%= f.following.count %></td>
        <td><%= f.point %></td>
        <td><%= f.activated %></td>
        <td>
          <%=link_to "delete", admin_user_path(f), method: :delete, class: "btn btn danger" %> |
          <%=link_to "edit", edit_admin_user_path(f), class: "btn btn danger" %>
        </td>
      </tr>
      <% end %>

      <%= will_paginate @user %>
    </tbody>
  </table>
