<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <div class="title">
    <b>Tile:</b><br>
    <span><%= micropost.title %></span>
  </div>
<!--   <span class="content">
    <b>Detail:</b><br>
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span> -->
   <span class="content">
    <% if micropost.attachment? %>
    <%= link_to "dowload", micropost.attachment.url, download: 'data' %>
    <iframe src=<%= micropost.attachment.url %> width="400px" height="250px" style="border: none;"> </iframe>
    <% end %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
     <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" }, class: "btn btn-danger" %>
    <% end %>
  </span>
</li>
