<div class="col-md-12">
  <div class="col-sm-4 col-xs-12">
    <div class="panel panel-default text-center">
      <div class="panel-heading">
         <%= image_tag 'user.jpg', class: "image-document" %>
      </div>
      <div class="panel-body">
        <p><b><%= @showDoc.id %></b></p>
        <p>
          <% if @showDoc.user.admin? %>
          <span>Admin</span>
          <% else %>
          <span>Member</span>
          <% end %>
        </p>
        <p><%= @showDoc.content %></p>
      </div>
      <div class="panel-footer">
        <h3>$19</h3>
        <h4>per month</h4>
        <%= link_to "download", @showDoc.attachment.url, download: 'data' if @showDoc.attachment? %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
<% if @showDoc.attachment.url.present? %>
    <iframe src=<%= @showDoc.attachment.url %> width="500px" height="600px" style="border: none;"> </iframe>
    <% end %>
  </div>
</div>
