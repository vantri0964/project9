<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @microposts .any? %>
      <div class="user_avatars">
        <% @microposts .each do |user| %>
        <%= link_to gravatar_for(user, size: 30), user %>
        <% end %>
      </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @microposts.any? %>
    <ul class="users follow">
      <% @microposts .each do |user| %>
      <li><%= link_to gravatar_for(user, size: 30), user %>
        <%= link_to user.name, user %>


      </li>
      <% end %>
    </ul>
    <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
