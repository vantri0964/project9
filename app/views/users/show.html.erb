<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4">
    <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
      <span>Point: <%= @user.point %></span>
    </h1>
  </div>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>

