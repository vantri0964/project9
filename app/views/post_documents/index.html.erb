<% if logged_in? %>
  <div class="row">
    <aside class="col-md-5">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <h3>----Add new share----</h3>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
     <div class="col-md-7">
       <h3>Micropost Feed</h3>
       <%= render 'shared/feed' %>
     </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>YOU ARE LOGIN</h1>
  </div>
<% end %>
