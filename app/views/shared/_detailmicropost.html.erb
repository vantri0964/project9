<div class="">
  <div class="col-md-4">
    <div class="panel panel-primary ">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-user"></span>
        <span>Người chia sẻ </span>
      </div>
      <div class="panel-body">
          <ul class="list-group">
            <div style="text-align:center;">
              <% if @showDoc.user.picture? %>
                <%= image_tag "#{@showDoc.user.picture.url}", alt: "blank",class: "img-circle user_header" %>
                <span><%= link_to  @showDoc.user.name, user_path(@showDoc.user) %></span>
              <% else %>
                 <div class="gravatar_edit user_header_not">
                   <%= gravatar_for @showDoc.user %> <br>
                   <%=link_to @showDoc.user.name, @showDoc.user %>
                 </div>
              <% end %>
            </div>
            <li class="list-group-item">Thông Tin:</li>
            <li class="list-group-item"><span class="glyphicon glyphicon-heart"></span> Rating: <%= rating_for @showDoc.user,:id, star: 5,disable_after_rate: false , enable_half: true%></li>
            <li class="list-group-item">
              <span class="glyphicon glyphicon-pencil"></span>
              số bài viết: <%= @showDoc.user.microposts.all.count %>
            </li>
          </ul>
      </div>
    </div>
  </div>
  <div class="col-md-7" style="margin-left:10px;">
    <div class="panel panel-primary ">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-exclamation-sign"></span>
        <span>Link bài viết</span>
      </div>
       <div class="panel panel-default">
          <div class="panel-body">
            <%= link_to @showDoc.content, @showDoc.content %>
          </div>
      </div>
    </div>
  </div>
</div>
