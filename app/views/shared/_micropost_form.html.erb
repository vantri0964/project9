<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
  <label for="">  Select list:</label>
  <%= collection_select(:micropost, :typemicropost_id, Typemicropost.all, :id, :name, {prompt: true} ,{:class=>"form-control"}) %></div>
  <div class="form-group">
    <label>Title:</label><br>
    <%= f.text_field :title, placeholder: "title document..", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Detail:</label><br>
    <%= f.text_area :content, placeholder: "Compose new micropost...", class: "form-control",rows: "7"  %>
  </div>
  <div class="form-group">
    <label>Choose file:</label>
    <%= f.file_field :attachment , class: "form-control"%></p>
  </div>
  <div class="form-group">
    <label for="">Choose picture:</label>
    <%= f.file_field :picture, class: "form-control" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
