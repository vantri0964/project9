<div class="container">
  <div class="col-md-5 sugest col-md-offset-3 panel panel-primary">
    <div class="col-md-12">
      <div class="panel-heading">
        <h3>
          <%= image_tag "icons8-send-email-50.png" %>
           Form Gửi Phản Hồi User
        </h3>
      </div>
      <%= form_for @sugest do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <label class="control-label">
        Yêu cầu  về nội dung?

        </label>
        <% if logged_in? %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
        <% end %>
        <div class="radio">
          <label>
         <!--  <input type="radio" name="fav_foods" params[:types] > -->
          <%= f.radio_button :types, value: 1 %>
            Hệ Thống
          </label>
           <label>
          <%= f.radio_button :types, value: 2 %>
            Người Dùng
          </label>
        </div>
        <div class="form-group">
          <label class="control-label " for="message_id">Message</label>
          <%= f.text_area :mesages, class: "form-control", rows: 5 %>
        </div>

        <div class="form-group">
         <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
